<!DOCTYPE html>
<html>
  <head>
    <title><%= first_name %>&nbsp;<%= last_name %> - Air Portfolio</title>
    <% include partials/head %> 
  </head>

  <body class="profile-padding">
    <header>
      <div class="container">
        <div class="center-align">
          <img src=" <%= main_picture %>" class="circle" width="100"><br>
          <h1 class="profile-name"><%= first_name %>&nbsp;<%= last_name %> </h1>
          <span><%= role %>, <%= city %>.</span>
        </div>
      </div>
    </header>

  <main>
    <div class="grid">
      <div class="grid-sizer"></div>
      <% for(var i=0; i < photoArray.length; i++) { %>
      <div class="grid-item">
        <a href="#" class="" data-featherlight="<%= photoArray[i].photo %>"> <img class="responsive-img "  src="<%= photoArray[i].photo %>"></a> 
      </div>
      <% } %>
    </div>
  </main>
  
  <footer>
    <p class="footer-text center-align">Powered by <a href="/">Air Portfolio</a></p>
  </footer>



<% include partials/footer %>
</body>
</html>


